<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wish.brachio.wishlist">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".LoginActivity"
            android:label="@string/title_login"


            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity2"
            android:label="@string/title_activity_login2" />
        <activity
            android:name=".HubActivity"
            android:label="@string/title_activity_hub" />

        <activity
            android:name=".model.NewAccount"
            android:label="@string/title_activity_new_account" />
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page"/>

        <activity
            android:name=".YourWishlistActivity"
            android:label="@string/title_activity_your_wishlist" />
        <activity
            android:name=".FriendListsActivity"
            android:label="@string/title_activity_friend_lists" />


        <activity android:name=".FriendWishListActivity"></activity>
    </application>

</manifest>